{
  "name": "eventemitter3",
  "version": "2.0.3",
  "description": "EventEmitter3 focuses on performance while maintaining a Node.js AND browser compatible interface.",
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "build": "mkdir -p umd && webpack --entry . --optimize-minimize --output-library EventEmitter3 --output-library-target umd --output-path umd --output-filename eventemitter3.min.js",
    "benchmark": "find benchmarks/run -name '*.js' -exec benchmarks/start.sh {} \\;",
    "prepublish": "if [ \"${TRAVIS}\" != \"true\" ]; then npm run build; fi",
    "test": "nyc --reporter=html --reporter=text mocha test/test.js",
    "test-browser": "node test/browser.js",
    "sync": "node versions.js"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "umd"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/primus/eventemitter3.git"
  },
  "keywords": [
    "EventEmitter",
    "EventEmitter2",
    "EventEmitter3",
    "Events",
    "addEventListener",
    "addListener",
    "emit",
    "emits",
    "emitter",
    "event",
    "once",
    "pub/sub",
    "publish",
    "reactor",
    "subscribe"
  ],
  "author": "Arnout Kazemier",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/primus/eventemitter3/issues"
  },
  "pre-commit": "sync, test",
  "devDependencies": {
    "assume": "~1.5.0",
    "mocha": "~3.4.0",
    "nyc": "~11.0.1",
    "pre-commit": "~1.2.0",
    "sauce-browsers": "~1.0.0",
    "sauce-test": "~1.3.3",
    "webpack": "~2.6.0"
  }
}
